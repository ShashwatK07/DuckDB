{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS Application",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug"],
      "port": 9229,
      "restart": true,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/"],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to NestJS Application",
      "port": 9229,
      "address": "localhost",
      "restart": false,
      "protocol": "inspector",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": null,
      "skipFiles": ["<node_internals>/"]
    }
  ]
}
